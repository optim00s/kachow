{
  "manifest_version": 3,
  "name": "Kachow",
  "version": "1.1",
  "description": "Estimate your laptop's charging/discharging power using the Battery API.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kachow"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["notifications", "storage", "alarms"]
}
